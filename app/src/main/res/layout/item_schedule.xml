<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:id="@+id/item_layout"
    android:background="@drawable/stroke_layout">
    <TextView
        android:id="@+id/time_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thứ 2"
        android:textSize="20dp"
        android:textColor="#3333CC"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/time_hour"
        android:textSize="25dp"
        android:textColor="#DD0000"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian: 6:00 đến 6:45"/>
    <TextView
        android:id="@+id/time_duration"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian tối đa mỗi lần bật: 60 phút"/>
    <TextView
        android:id="@+id/time_interrupt_time"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian ngắt: 20 phút"/>
    <TextView
        android:id="@+id/time_sum"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng thời gian sử dụng: 100 phút"/>
</LinearLayout>